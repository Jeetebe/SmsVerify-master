<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_search_white_36dp"
            android:layout_width="@dimen/icon40"
            android:layout_gravity="center"
            android:layout_height="@dimen/icon40"
            android:padding="8dp" />
        <TextView
            android:text="Tra cứu kho số"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textsizemedium"           
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />
        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="@dimen/icon40"
            android:src="@drawable/ic_close_white_36dp"
            android:layout_height="@dimen/icon40"
            android:layout_gravity="center"
            android:padding="8dp" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/transblue"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="fill_vertical"
                            android:text="Đầu số"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spinnerdauso"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:prompt="@string/dauso"
                            android:textSize="18sp" />

                </LinearLayout>

                <android.support.v7.widget.SearchView
                    android:id="@+id/search"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:inputType="number"
                   />

                <Button
                    android:id="@+id/btntimkiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:text="Tìm kiếm"
                    android:textColor="@color/white" />


        </LinearLayout>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_margin="10dp"
            android:dividerHeight="1dp"
            android:divider="@color/light1"
            android:scrollbars="none" />



</LinearLayout>